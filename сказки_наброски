старая хлеб-соль забывается-----------------------------------------------------------------------------
“еда”

“капкан” = { 
	состояние: 1;
принадлежит: “Охотники”;
 	взаимодействие: 
   если Объект.имя == “капкан”.принадлежит {
если (состояние == 0) то состояние = 1;
иначе состояние = 0;
   } иначе {
   	если (состояние == 1) то Объект.здоровье = 0;
				       “капкан”.принадлежит += “еда”	       
      		   }
}

