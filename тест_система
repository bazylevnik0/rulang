определить идентификатор_формы_предложения() {

  если предложение состоит из трех слов то {
    если ((1 слово Объект) и (3 слово предмет)) то идентификатор_формы_предложения = 0;
    если ((1 слово Объект) и (3 слово Объект)) то идентификатор_формы_предложения = 1;
    если ((1 слово Объект) и(3 слово АБСТРАКЦИЯ)) то идентификатор_формы_предложения = 5;
     если ((1 слово Объект) и(3 слово предложение)) то идентификатор_формы_предложения = 8;
  }
  если предложение состоит из двух слов то {
    если (1 слово Объект) то идентификатор_формы_предложения = 2;
    если (1 слово АБСТРАКЦИЯ) то идентификатор_формы_предложения = 3;
    если (1 слово Объект) то идентификатор_формы_предложения = 4; // посмотри чем 2 от 4 отличается да ив целом надо будет порядок переписать
    если (2 слово АБСТРАКЦИЯ) то идентификатор_формы_предложения = 6;
    если (1 слово предмет) то идентификатор_формы_предложения = 7;
  }
}


//раздели на идентивификацию и выполнение
если предложение состоит из четрыех слов{
   //нормально оформи
   если (такое: Кобыла жить в Хозяин) форма 9; то выполнить предложение как 1 , но в окружении  Объект2
   если (такое: Хозяин стащить Кобыла в яр) форма 10; то выполнить предложение как 1, но в окружении 5ого слова;
   если ( 2 слово действие и 3 слово действие то) форма 11;  	
}
//системные функции
удалить(аргумент) {
  все свойства аргумента undefined;
  аргумент.видимость = 0;
}
-----------------------------------------------------------------------------------------
логика выполнения 	
анализ формы предложения
	подсчет слов
	выявление формы и получения идентификатора
	создание буфера для выполнения
	
выполнение
	проверка модификаторов и аргументов времени
	создание контекста если есть обстоятельства
	выполнение
	 
